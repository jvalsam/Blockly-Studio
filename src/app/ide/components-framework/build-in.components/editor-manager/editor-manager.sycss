
.editors-manager-container {
    height: 100%;
    width: 100%;
}

.pitem-editors-area-normal-split-1 {
    height: 100%;
}

.pitem-editors-area-normal-split-2 {
    display: none;
}

.pitem-editors-area-horizontal-split-1 {
    width: 50%;
    height: 100%;
    position: absolute;
    border-right: solid 8px #dad9d9;
}

.pitem-editors-area-horizontal-split-2 {
    width: 50%;
    height: 100%;
    position: relative;
    float: right;
}

.pitem-editors-area-vertical-split-1 {
    width: 100%;
    height: 50%;
}

.pitem-editors-area-vertical-split-2 {
    width: 100%;
    height: 50%;
}
